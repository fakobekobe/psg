{% extends 'base.html.twig' %}

{% block title 'Reinitialiser le mot de passe' %}

{% block body %}
	<div class="content-wrapper">

		<div class="row">
			<div class="col-sm-6">
				<h5 class="mb-0 font-weight-bold">Reinitialiser le mot de passe</h5>
				<p>Gestion du mot de passe</p>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12 d-flex grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<div class="d-flex flex-wrap">
							<h4 class="card-title mb-3">Reinitialiser votre mot de passe</h4>
						</div>

						<!-- Formulaire -->
						<div class="row justify-content-center mb-5">
							<div class="col-md-8 bg-light p-3">
								<h1 class="text-center pb-3">FORMULAIRE DE SAISIE DE MOT DE PASSE</h1>
								{{ form_start(form) }}
								{{ form_row(form.motdepassecourant) }}
								{{ form_row(form.plainPassword) }}
								<div class="row px-3 justify-content-between">
									<button type="submit" class="btn btn-secondary  col-md-5" id="ajouter">
										<i class="typcn typcn-plus"></i>
										Valider
									</button>
									<button type="reset" class="btn btn-primary  col-md-5" id="annulerajouter">
										<i class="typcn typcn-delete"></i>
										Annuler
									</button>
								</div>

								{{ form_end(form) }}
							</div>
						</div>
						<!-- Fin du Formulaire -->
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}

{% block scripts %}
{% endblock %}

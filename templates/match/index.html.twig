{% extends 'base.html.twig' %}

{% block title 'Match' %}

{% block body %}
	<div class="content-wrapper">

		<div class="row">
			<div class="col-sm-6">
				<h5 class="mb-0 font-weight-bold">Gestion > Match</h5>
				<p>Gestion des matchs</p>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12 d-flex grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h3 class="text-center bg-info p-0 p-2 m-0">Sélectionner les champs pour déterminer la rencontre et les équipes</h4>
							{{form_start(form)}}
						<div class="row mb-3 bg-info pt-3">
                            <div class="col-lg-3">
								{{form_row(form.saison)}}
							</div>
							<div class="col-lg-3">
								{{form_row(form.championnat)}}
							</div>
							<div class="col-lg-3">
								{{form_row(form.calendrier)}}
							</div>							
							<div class="col-lg-3">
								<button class="btn btn-primary btn-block p-0" id="valider_1" style="font-size:1.4em;" ><i class="typcn typcn-input-checked" style="font-size:1.6em;"></i> Valider</button>
							</div>
						</div>
							{{form_end(form)}}

                        <div class="row mt-3 mb-5">
                            <!-- Liste des Rencontres -->
                            <div class="col-lg-6" >
                                <h3 class="text-center">Cocher une rencontre</h3>
                                <div id="contenu_rencontre"></div>
							</div>

                            <!-- Liste des équipes à domicile -->
                            <div class="col-lg-3">
							<h3 class="text-center">Equipe à domicile</h3>
                                <div id="contenu_domicile"></div>
							</div>

                            <!-- Liste des à l'extérieur -->
                            <div class="col-lg-3">
							<h3 class="text-center">Equipe à l'extérieur</h3>
                                <div id="contenu_exterieur"></div>
							</div>
                        </div>

						<!-- BTN Enregister -->
						<div class="row justify-content-center">
							<div class="col-lg-4">
								<button class="btn btn-success btn-block p-0" id="enregistrer" style="font-size:1.4em;" ><i class="typcn typcn-export" style="font-size:1.6em;"></i> Enregistrer</button>
							</div>
						</div>
						<div class="row mb-5">
							<div class="col-lg-12">
								<hr />
							</div>
						</div>

						<!-- Début du Tableau -->
						<div class="table-responsive">
							<table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
								<thead>
									<tr>
										<th>N°</th>
										<th>Calendrier</th>
										<th>Equipe à domicile</th>
										<th>Equipe à l'extérieur</th>
										<th>Date</th>
										<th>Heure</th>
										<th>Température</th>
										<th>Actions</th>
									</tr>
								</thead>
							</table>
						</div>
						<!-- FIn du Tableau -->

					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}

{% block scripts %}
	<script src="{{ asset('js/view/match.js') }}"></script>
{% endblock %}

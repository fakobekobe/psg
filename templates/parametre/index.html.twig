{% extends 'base.html.twig' %}

{% block title 'Configuration' %}

{% block body %}
	<div class="content-wrapper">

		<div class="row">
			<div class="col-sm-6">
				<h5 class="mb-0 font-weight-bold">Paramètre</h5>
				<p>Gestion des paramètres</p>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12 d-flex grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<div class="d-flex flex-wrap justify-content-center">
							<h4 class="card-title mb-3 text-center">Formulaire des paramètres</h4>
						</div>

                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                                {{form(form)}}
                            </div>
                        </div>

					</div>
					<div class="card-footer">
						<div class="row justify-content-center">

							<div class="col-lg-3 col-sm-12">
								<button type="submit" class="btn btn-success btn-lg btn-block" id="ajouter">
									<i class="typcn typcn-database"></i>
									Enregistrer
								</button>
							</div>

							<div class="col-lg-3 col-sm-12">
								<button type="reset" class="btn btn-danger btn-lg btn-block" id="annuler">
									<i class="typcn typcn-times"></i>
									Annuler
								</button>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}

{% block scripts %}
	<script src="{{ asset('js/view/parametre.js') }}"></script>
{% endblock %}

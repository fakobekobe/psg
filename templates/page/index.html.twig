{% extends 'base.html.twig' %}

{% block title %}Page
{% endblock %}

{% block body %}
	<div
		class="content-wrapper">
		
		<div class="row">
			<div class="col-sm-6">
				<h5 class="mb-0 font-weight-bold">Admin > Page</h5>
				<p>Gestion des pages</p>
			</div>			
		</div>

		<div class="row">
			<div class="col-lg-12 d-flex grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<div class="d-flex flex-wrap justify-content-between">
							<h4 class="card-title mb-3">Liste des pages</h4>
							<div class="mb-3">
								<button class="m-0 font-weight-bold btn btn-secondary btn-sm" id="btn_ajouter_page">
									<i class="typcn typcn-plus"></i>
									Ajouter les pages
								</button>
							</div>
						</div>

						<!-- Début du Tableau -->
						<div class="table-responsive">
							<table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
								<thead>
									<tr>
										<th>N°</th>
										<th>Nom</th>
									</tr>
								</thead>
							</table>
						</div>
						<!-- FIn du Tableau -->

					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}

{% block scripts %}
	<script src="{{ asset('js/view/page.js') }}"></script>
{% endblock %}
